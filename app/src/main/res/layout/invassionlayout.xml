<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/invassion_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/invassion_linearlayout_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/invassion_image_linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/invassion_image_defender"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="@drawable/imageviewdrawble"/>
            <ImageView
                android:id="@+id/invassion_image_attacker"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="@drawable/imageviewdrawable_2_image"/>
        </LinearLayout>


        <TextView
            android:id="@+id/invassion_text"
            android:textColor="@color/black"
            android:layout_width="200dp"
            android:layout_height="150dp" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/invassion_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:max="100" />

</LinearLayout>