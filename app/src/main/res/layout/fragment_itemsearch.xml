<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ItemSearch.ItemSearchFragment">
<!--    TODO-->
    <TextView
        android:id="@+id/text_itemSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <SearchView
        android:id="@+id/itemsearch_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:iconifiedByDefault="true"
        android:queryHint="请输入..."
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/itemsearch_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/text_itemSearch"
        app:layout_constraintTop_toBottomOf="@+id/itemsearch_search"
        app:layout_constraintVertical_bias="0.534"
        tools:ignore="MissingConstraints,UnknownIdInLayout"
        tools:layout_editor_absoluteX="0dp"
        android:headerDividersEnabled="true"
        android:stackFromBottom="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>
